    <table id="MainTable">
      <thead>
        <tr>
          <th>Title</th>
          <th>Contents</th>
          <th>Status</th>
          <th>Charge</th>
          <th>유저수</th>
          <th>show</th>
          <th>edit</th>
          <th>destroy</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @requests.each do |request| %>
          <tr>
            <td><%= request.title %></td>
            <td><%= request.contents %></td>
            <td><%= request.status %></td>
            <td><%= request.charge %></td>
            <td><%= request.users.count %></td>
            <td><%= link_to 'Show', request %></td>
            <td><%= link_to 'Edit', edit_request_path(request) %></td>
            <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<script type="text/javascript">
  $(document).ready(function(){
      $('#MainTable').DataTable(
        {
          "searching": false,
          "lengthChange": false,

        }
      );
  });
</script>
